<div>
  <div>
    <h1>
      <%= @the_shift.shift_name %> Details
    </h1>

      <div class="mb-3">
        <a href="/shifts" class="btn btn-outline-secondary">
          Go Back to All hifts
        </a>
      </div>
    
      <div>
        <a href="/delete_shift/<%= @the_shift.id %>" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this shift?');">
          Delete hift
        </a>
      </div>
    </div>

    

<hr>


<div>
  <div>
    <h2>
      Edit Details
    </h2>

    <form action="/modify_shift/<%= @the_shift.id %>"  method="post" >
      <div class="mb-3">
        <label for="shift_name_box">
          Shift name
        </label>

        <input type="text" id="shift_name_box" name="query_shift_name" value="<%= @the_shift.shift_name %>">
      </div>

      <div class="mb-3">
        <label for="location_box">
          Location
        </label>

        <input type="text" id="location_box" name="query_location" value="<%= @the_shift.location %>">
      </div>

      <div class="mb-3">
        <label for="date_box">
          Date & Time
        </label>

        <input type="datetime-local" id="date_box" name="query_date"
         value="<%= @the_shift.date.strftime('%Y-%m-%dT%H:%M') %>">
      </div>

      <button class="btn btn-success">
        Update Shift
      </button>
    </form>
  </div>
</div>

<hr>
